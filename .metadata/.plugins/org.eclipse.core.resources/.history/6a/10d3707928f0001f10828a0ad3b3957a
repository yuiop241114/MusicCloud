package com.musicCloud.common;

import java.io.FileInputStream;
import java.io.IOException;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
import java.util.Properties;

public class JDBCTemplate {
	
	/**
	 * Connection 객체 생성 메소드
	 */
	public static Connection getConnection() {
		
		Connection conn = null;
		
		//driver 등록 정보가 들어 있는 파일 경로 저장 후 읽어 들이는 구문
		Properties prop = new Properties();
		String driverFilePath = JDBCTemplate.class.getResource("/db/driver/driver.properties").getPath();
		try {
			prop.load( new FileInputStream(driverFilePath));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
		try {
			//DB 연결 구문
			Class.forName(prop.getProperty("driver"));
			conn = DriverManager.getConnection(
												prop.getProperty("url")
											  , prop.getProperty("username")
											  , prop.getProperty("password")
											  );
			//autocommit 해제 
			conn.setAutoCommit(false);
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
		} catch (SQLException e) {
			e.printStackTrace();
		}
		return conn;
	}
	
	/**
	 * commit 메소드
	 */
	public static void commit(Connection conn) {
		try {
			if(conn != null && !conn.isClosed()) {
				conn.commit();
			}
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}
	
	
	/**
	 * @param conn
	 * rollback 메소드
	 */
	public static void rollback(Connection conn) {
		try {
			if(conn != null && !conn.isClosed()) {
				conn.rollback();
			}
		} catch (SQLException e) {
			e.printStackTrace();
		}
	}
	
	
	/**
	 * @param conn
	 * Connection 객체 반납 메소드
	 */
	public static void close(Connection conn) {
		try {
			if(conn != null && !conn.isClosed()) {
				conn.close();
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	public static void close(PreparedStatement pstmt) {
		try {
			if(pstmt != null && !conn.isClosed()) {
				
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
	
	

}
